<div class="pinCard" id="<%= dom_id(pin) %>">
  <%= image_tag pin.pin_image.url, width: 300 if pin.pin_image.url %>

  <%= pin.user.email %>

  <p>
    <%= link_to pin.description, pin, data: { turbo: false } %>
  </p>

  <h3>Tags</h3>
  <div>
    <% pin.tag_list.each do |tag| %>
      <div>
        <%= tag %>
      </div>
    <% end %>
  </div>

  <h3>Categories</h3>
  <div>
    <% pin.category_list.each do |tag| %>
      <div>
        <%= tag %>
      </div>
    <% end %>
  </div>

  <%= render 'pins/favourite_button', pin: pin %>
  <%= render 'pins/like_button', pin: pin %>

</div>
