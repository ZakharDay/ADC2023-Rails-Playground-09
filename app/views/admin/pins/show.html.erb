<p style="color: green"><%= notice %></p>

<%= render @pin %>

<hr>
<h3>Comments</h3>

<%= link_to "New comment", new_admin_pin_comment_path(@pin) %>

<%= render @pin.comments, pin: @pin %>

<br>
<br>

<% if can? :manage, @pin %>
  <div>
    <%= link_to "Edit this pin", edit_admin_pin_path(@pin) %>
    <%= button_to "Destroy this pin", [:admin, @pin], method: :delete %>
  </div>
<% end%>
